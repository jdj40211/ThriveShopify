{{ 'section-care-instructions.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="care-instructions section-{{ section.id }}-padding color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width">
    {% if section.settings.heading != blank %}
      <h2 class="care-instructions__heading {{ section.settings.heading_size }}">
        {{ section.settings.heading }}
      </h2>
    {% endif %}

    {% if section.settings.description != blank %}
      <div class="care-instructions__description rte">
        {{ section.settings.description }}
      </div>
    {% endif %}

    <div class="care-instructions__grid">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'care_item' %}
            <div class="care-instructions__item" {{ block.shopify_attributes }}>
              <div class="care-instructions__icon">
                {% case block.settings.icon %}
                  {% when 'washing' %}
                    {% render 'icon-washing' %}
                  {% when 'bleach' %}
                    {% render 'icon-bleach' %}
                  {% when 'drying' %}
                    {% render 'icon-drying' %}
                  {% when 'ironing' %}
                    {% render 'icon-ironing' %}
                  {% when 'dry-clean' %}
                    {% render 'icon-dry-clean' %}
                  {% when 'water-temp' %}
                    {% render 'icon-water-temp' %}
                  {% when 'hang-dry' %}
                    {% render 'icon-hang-dry' %}
                  {% when 'tumble-dry' %}
                    {% render 'icon-tumble-dry' %}
                {% endcase %}
              </div>
              <div class="care-instructions__content">
                <h3 class="care-instructions__title">{{ block.settings.title }}</h3>
                <p class="care-instructions__text">{{ block.settings.description }}</p>
              </div>
            </div>

          {% when 'material_specific' %}
            <div class="care-instructions__material-card" {{ block.shopify_attributes }}>
              <h3 class="care-instructions__material-title">
                {{ block.settings.material_name }}
              </h3>
              <div class="care-instructions__material-content rte">
                {{ block.settings.instructions }}
              </div>
            </div>

          {% when 'warning' %}
            <div class="care-instructions__warning" {{ block.shopify_attributes }}>
              <div class="care-instructions__warning-icon">
                {% render 'icon-warning' %}
              </div>
              <div class="care-instructions__warning-content">
                <h4 class="care-instructions__warning-title">{{ block.settings.warning_title }}</h4>
                <p class="care-instructions__warning-text">{{ block.settings.warning_text }}</p>
              </div>
            </div>

          {% when 'tip' %}
            <div class="care-instructions__tip" {{ block.shopify_attributes }}>
              <div class="care-instructions__tip-icon">
                {% render 'icon-lightbulb' %}
              </div>
              <div class="care-instructions__tip-content">
                <h4 class="care-instructions__tip-title">{{ block.settings.tip_title }}</h4>
                <p class="care-instructions__tip-text">{{ block.settings.tip_text }}</p>
              </div>
            </div>
        {% endcase %}
      {% endfor %}
    </div>

    {% if section.settings.show_symbols_guide %}
      <div class="care-instructions__symbols">
        <h3 class="care-instructions__symbols-title">{{ section.settings.symbols_title }}</h3>
        {% if section.settings.symbols_image != blank %}
          <img
            src="{{ section.settings.symbols_image | image_url: width: 1200 }}"
            alt="{{ section.settings.symbols_title }}"
            loading="lazy"
            width="1200"
            height="{{ 1200 | divided_by: section.settings.symbols_image.aspect_ratio | ceil }}"
            class="care-instructions__symbols-image"
          >
        {% endif %}
        {% if section.settings.symbols_description != blank %}
          <div class="care-instructions__symbols-description rte">
            {{ section.settings.symbols_description }}
          </div>
        {% endif %}
      </div>
    {% endif %}
  </div>
</div>

