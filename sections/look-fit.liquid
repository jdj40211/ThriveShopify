<script>
  function lookFitDesktopCarousel() {
    return {
      swiper: null,

      init() {
        this.$nextTick(() => {
          this.initializeCarousel();
        });
      },

      initializeCarousel() {
        const carouselElement = this.$refs.desktopCarousel;
        if (!carouselElement || typeof Swiper === 'undefined') {
          console.log('Look Fit Desktop Carousel: Missing element or Swiper not loaded');
          return;
        }

        // Check if already initialized
        if (carouselElement.swiper) {
          console.log('Look Fit Desktop Carousel: Already initialized');
          return;
        }

        // Count slides for debugging
        const slides = carouselElement.querySelectorAll('.swiper-slide');
        console.log('Look Fit Desktop Carousel: Found', slides.length, 'slides');

        // Initialize Swiper
        this.swiper = new Swiper(carouselElement, {
          slidesPerView: 1,
          spaceBetween: 0,
          loop: false,
          centeredSlides: false,
          grabCursor: false,
          touchRatio: 1,
          touchAngle: 45,
          simulateTouch: true,
          autoHeight: false,
          navigation: {
            nextEl: carouselElement.querySelector('.look-fit-desktop-next'),
            prevEl: carouselElement.querySelector('.look-fit-desktop-prev'),
          },
          pagination: {
            el: carouselElement.querySelector('.swiper-pagination'),
            clickable: true,
            renderBullet: function (index, className) {
              return (
                '<span class="' +
                className +
                ' w-2 h-2 rounded-full bg-white/60 cursor-pointer transition-all duration-200 hover:bg-white/80"></span>'
              );
            },
          },
          on: {
            init: () => {
              this.updateArrowStates();
            },
            slideChange: () => {
              this.updateArrowStates();
            },
            reachBeginning: () => {
              this.updateArrowStates();
            },
            reachEnd: () => {
              this.updateArrowStates();
            },
          },
        });

        // Store swiper instance
        carouselElement.swiper = this.swiper;
        console.log('Look Fit Desktop Carousel: Successfully initialized with', slides.length, 'slides');
      },

      updateArrowStates() {
        if (!this.swiper) return;

        const prevArrow = this.$refs.desktopCarousel.querySelector('.look-fit-desktop-prev');
        const nextArrow = this.$refs.desktopCarousel.querySelector('.look-fit-desktop-next');

        if (prevArrow) {
          if (this.swiper.isBeginning) {
            prevArrow.style.opacity = '0';
            prevArrow.style.pointerEvents = 'none';
            prevArrow.style.visibility = 'hidden';
          } else {
            prevArrow.style.opacity = '';
            prevArrow.style.pointerEvents = '';
            prevArrow.style.visibility = '';
          }
        }

        if (nextArrow) {
          if (this.swiper.isEnd) {
            nextArrow.style.opacity = '0';
            nextArrow.style.pointerEvents = 'none';
            nextArrow.style.visibility = 'hidden';
          } else {
            nextArrow.style.opacity = '';
            nextArrow.style.pointerEvents = '';
            nextArrow.style.visibility = '';
          }
        }
      },

      destroy() {
        if (this.swiper) {
          this.swiper.destroy(true, true);
