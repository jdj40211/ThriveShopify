{% if template.name == 'product' or template.name == 'look_fit' %}
  {% assign header_mode = 'solid-desktop-transparent-mobile' %}
{% endif %}
{% if template.name == 'search' %}
  {% assign header_mode = 'solid' %}
{% endif %}
{% if template.name == 'page'
  and template.suffix == 'wishlist'
  or template.name == 'page'
  and template.suffix == 'wish-list'
  or template.name == 'page'
  and template.suffix == 'look-fit'
  or template.name == 'page'
  and template.suffix == 'look-fit-collection'
%}
  {% assign header_mode = 'solid' %}
{% endif %}

{% if template.name == 'page' and page and page.handle == 'look-fit-collection' %}
  {% assign header_mode = 'solid' %}
{% endif %}

{% if request and request.path contains '/pages/look-fit-collection' %}
  {% assign header_mode = 'solid' %}
{% endif %}

{% if template.name == 'metaobject' and template.suffix == 'look_fit_collection' %}
  {% assign header_mode = 'solid' %}
{% elsif template.name == 'metaobject' and template.suffix == 'look-fit-collection' %}
  {% assign header_mode = 'solid' %}
{% endif %}

{%- comment -%}
  Per-resource header variant override via metafield `custom.header_variant`.
  Supported values: "solid" or "transparent" (any other value is ignored).
  Also supports a section-level default override setting per template instance.
{%- endcomment -%}
{% assign header_override = '' %}

{% if template.name == 'product' and product and product.metafields.custom.header_variant != blank %}
  {% assign header_override = product.metafields.custom.header_variant.value | downcase %}
{% elsif template.name == 'collection' and collection and collection.metafields.custom.header_variant != blank %}
  {% assign header_override = collection.metafields.custom.header_variant.value | downcase %}
{% elsif template.name == 'article' and article and article.metafields.custom.header_variant != blank %}
  {% assign header_override = article.metafields.custom.header_variant.value | downcase %}
{% elsif template.name == 'blog' and blog and blog.metafields.custom.header_variant != blank %}
  {% assign header_override = blog.metafields.custom.header_variant.value | downcase %}
{% elsif template.name == 'page' and page and page.metafields.custom.header_variant != blank %}
  {% assign header_override = page.metafields.custom.header_variant.value | downcase %}
{% endif %}

{% if header_override == ''
  and section.settings.header_variant_default
  and section.settings.header_variant_default != 'auto'
%}
  {% assign header_override = section.settings.header_variant_default %}
{% endif %}

{% if header_override == 'solid' %}
  {% assign header_mode = 'solid' %}
{% elsif header_override == 'transparent' %}
  {% assign header_mode = '' %}
{% endif %}

{% comment %} Determine scroll threshold based on page type {% endcomment %}
{% assign scroll_threshold = settings.header_scroll_threshold_default %}
{% if template.name == 'index' %}
  {% assign scroll_threshold = settings.header_scroll_threshold_home %}
{% elsif template.name == 'product' %}
  {% assign scroll_threshold = settings.header_scroll_threshold_product %}
{% elsif template.name == 'collection' %}
  {% assign scroll_threshold = settings.header_scroll_threshold_collection %}
{% elsif template.name == 'page' %}
  {% assign scroll_threshold = settings.header_scroll_threshold_page %}
{% endif %}

<header
  class="z-50 w-full transition-none ease-linear"
  :class="(forceSolid || (solidOnDesktop && isDesktop) || (solidOnMobile && !isDesktop) || isScrolled || isMenuHovered) ? 'bg-white ' : (solidDesktopTransparentMobile && isDesktop) ? 'bg-white' : (solidDesktopTransparentMobile && !isDesktop) ? 'bg-transparent' : (transparentMobileProduct && !isDesktop) ? 'bg-transparent' : 'bg-transparent'"
  data-header-mode="{{ header_mode }}"
  data-scroll-threshold="{{ scroll_threshold }}"
  x-data="
    {
      mobileMenuOpen: false,
      cartDrawerOpen: false,
      activeMegaMenu: null,
      isScrolled: false,
      isDesktop: window.innerWidth >= 1024,
      forceSolid: false,
      solidOnDesktop: false,
      solidOnMobile: false,
      transparentMobileProduct: false,
      solidDesktopTransparentMobile: false,
      scrollY: 0,
      isMenuHovered: false,
      init() {
        this.handleScroll();
        window.addEventListener('scroll', this.handleScroll.bind(this));
        window.addEventListener('resize', () => { this.isDesktop = window.innerWidth >= 1024; });

        // Configure header behavior based on data attribute from Liquid
        const mode = this.$el.dataset.headerMode || '';
        if (mode === 'solid') {
          this.forceSolid = true;
        } else if (mode === 'solid-desktop') {
          this.solidOnDesktop = true;
        } else if (mode === 'solid-mobile') {
          this.solidOnMobile = true;
        } else if (mode === 'transparent-mobile-product') {
          this.transparentMobileProduct = true;
        } else if (mode === 'solid-desktop-transparent-mobile') {
          this.solidDesktopTransparentMobile = true;
        }
      },
      handleScroll() {
        // Calculate scroll threshold as percentage of viewport height
        const viewportHeight = window.innerHeight;
        const thresholdPercentage = parseInt(this.$el.dataset.scrollThreshold) || 95;
        const scrollThreshold = (viewportHeight * thresholdPercentage) / 100;
        this.isScrolled = window.scrollY > scrollThreshold;
      },
      openCartDrawer() { this.cartDrawerOpen = true; },
      showMegaMenu(collectionHandle) { this.activeMegaMenu = collectionHandle; },
      hideMegaMenu() { this.activeMegaMenu = null; },
      toggleMobileMenu() {
        this.mobileMenuOpen = !this.mobileMenuOpen;
        if (this.mobileMenuOpen) {
          document.body.style.overflow = 'hidden';
          document.body.classList.add('mobile-menu-open');
        } else {
          document.body.style.overflow = '';
          document.body.classList.remove('mobile-menu-open');
        }
      }
    }
  "
>
  <nav
    class="grid grid-cols-3 h-15 px-4 w-full lg:pl-9 lg:pr-12 bg-transparent relative transition-none ease-linear"
    :class="(forceSolid || (solidOnDesktop && isDesktop) || (solidOnMobile && !isDesktop) || isScrolled || isMenuHovered) ? 'text-black' : (solidDesktopTransparentMobile && isDesktop) ? 'text-black' : (solidDesktopTransparentMobile && !isDesktop) ? 'text-black' : (transparentMobileProduct && !isDesktop) ? 'text-black' : 'text-white'"
  >
    <!-- Desktop Menu -->
    <div class="header__menu hidden lg:flex items-center justify-center lg:justify-start ">
      {% for link in section.settings.menu.links %}
        {% assign collection_handle = link.url | remove: '/collections/' | remove: '/' %}
        {% assign collection = collections[collection_handle] %}
        <div
          class="h-full flex items-center"
          {% if link.links.size > 0 %}
            @mouseenter="isMenuHovered = true; showMegaMenu('{{ collection_handle }}')"
            @mouseleave="isMenuHovered = false; hideMegaMenu()"
          {% else %}
            @mouseenter="isMenuHovered = false; hideMegaMenu()"

            @mouseleave="isMenuHovered = false; hideMegaMenu()"
          {% endif %}
        >
          <a
            href="{{ link.url }}"
            class="font-semibold h-full flex items-center px-3"
            :class="activeMegaMenu === '{{ collection_handle }}' ? ((isScrolled || isMenuHovered) ? 'text-gray-600' : 'text-gray-300') : ''"
          >
            <span class="hover-line body">
              {{ link.title }}
            </span>
          </a>

          {% if link.links.size > 0 %}
            <!-- Mega Menu Panel -->
            <div
              x-cloak
              x-show="activeMegaMenu === '{{ collection_handle }}'"
              x-transition:enter-start="opacity-0 max-h-0 overflow-hidden"
              x-transition:enter-end="opacity-100 max-h-screen overflow-visible"
              :class="
                [
                  'absolute top-full left-0 w-full bg-white pl-12 py-4  z-50 mega-menu',
                  activeMegaMenu === '{{ collection_handle }}' ? 'is-active' : ''
                ]
              "
              style="
                --anim-base-delay: 20ms;   /* delay before first child */
                --anim-step: 30ms;         /* stagger step between items */
                --anim-duration: 250ms;    /* each child animation duration */
                --anim-distance: 16px;     /* slide distance from left */
              "
              data-anim-container
              class="overflow-hidden"
            >
              <div class="">
                <div class="flex gap-8">
                  <!-- Left: Menu Columns -->
                  <div class="flex w-full">
                    <div class="w-full flex gap-8">
                      {% comment %} Running order counter for global stagger across all items {% endcomment %}
                      {% assign order_counter = 0 %}

                      {% for sub_link in link.links %}
                        {% assign order_counter = order_counter | plus: 1 %}
                        <div
                          class="space-y-4 w-full mega-menu-column"
                          data-anim
                          style="--anim-order: {{ order_counter }};"
                        >
                          <!-- Column Title (not animated separately; remove data-anim above if you want only links) -->

                          <p class="body-sm uppercase text-black/40  ">
                            {{- sub_link.title -}}
                          </p>

                          <!-- Tertiary Links -->
                          <div class="flex flex-col gap-2">
                            {% if sub_link.links.size > 0 %}
                              {% for tertiary_link in sub_link.links %}
                                {% assign order_counter = order_counter | plus: 1 %}
                                <a
                                  href="{{ tertiary_link.url }}"
                                  class="body font-medium capitalize text-black mega-menu-link"
                                  data-anim
                                  style="--anim-order: {{ order_counter }};"
                                >
                                  <span class="hover-line">
                                    {{ tertiary_link.title }}
                                  </span>
                                </a>
                              {% endfor %}
                            {% else %}
                              {% comment %} Fallback for secondary links without tertiary links {% endcomment %}
                              {% assign order_counter = order_counter | plus: 1 %}
                              <a
                                href="{{ sub_link.url }}"
                                class="body font-medium capitalize text-black mega-menu-link hover-line"
                                data-anim
                                style="--anim-order: {{ order_counter }};"
                              >
                                Ver {{ sub_link.title }}
                              </a>
                            {% endif %}
                          </div>
                        </div>
                      {% endfor %}
                    </div>
                  </div>

                  <!-- Right: Collection Cards -->
                  <div class="flex w-full">
                    <div class="w-full flex  gap-1">
                      {% if collection.metafields.custom.subcollections.value.count > 0 %}
                        {% for subcollection_item_handle in collection.metafields.custom.subcollections.value
                          limit: 2
                        %}
                          {% assign subcollection = collections[subcollection_item_handle.handle] %}
                          {% if subcollection %}
                            {% assign order_counter = order_counter | plus: 1 %}
                            <div
                              class="h-48 w-full overflow-hidden"
                              data-anim
                              style="--anim-order: {{ order_counter }};"
                            >
                              {% render 'collection-card',
                                collection: subcollection,
                                text_position: 'bottom-left',
                                aspect_ratio: '4:3'
                              %}
                            </div>
                          {% endif %}
                        {% endfor %}
                      {% else %}
                        {% assign order_counter = order_counter | plus: 1 %}
                        <div
                          class="h-48 w-full bg-gray-100 flex items-center justify-center"
                          data-anim
                          style="--anim-order: {{ order_counter }};"
                        >
                          <span class="text-gray-500 text-sm text-center">Colección Relacionada 1</span>
                        </div>

                        {% assign order_counter = order_counter | plus: 1 %}
                        <div
                          class="h-48 w-full bg-gray-100 rounded-lg flex items-center justify-center"
                          data-anim
                          style="--anim-order: {{ order_counter }};"
                        >
                          <span class="text-gray-500 text-sm text-center">Colección Relacionada 2</span>
                        </div>
                      {% endif %}
                    </div>
                  </div>
                </div>
              </div>
            </div>
          {% endif %}
        </div>
      {% endfor %}
    </div>

    <!-- Mobile Menu Button -->
    <div class="flex gap-6 items-center lg:hidden">
      <button
        @click="toggleMobileMenu()"
        class=""
        :class="(isScrolled || (solidDesktopTransparentMobile && isDesktop) || (solidDesktopTransparentMobile && !isDesktop)) ? 'text-black hover:text-gray-600' : 'text-white hover:text-gray-300'"
        aria-label="Toggle mobile menu"
      >
        {% render 'menu-icon' %}
      </button>

      <h2 class="header__title flex lg:hidden items-center justify-center">
        <a href="{{ routes.root_url }}">
          {% if section.settings.logo != blank %}
            <img
              src="{{ section.settings.logo | image_url: width: 300 }}"
              alt="{{ shop.name }}"
              :class="(forceSolid || (solidOnDesktop && isDesktop) || (solidOnMobile && !isDesktop) || isScrolled) ? 'invert-0' : 'invert-100'"
              style="height: {{ section.settings.logo_height | default: 40 }}px; width: auto;"
              loading="eager"
              width="700"
              height="400"
            >
          {% endif %}
        </a>
      </h2>
    </div>

    <!-- Logo -->
    <h2 class="header__title hidden lg:flex items-center justify-center">
      <a href="{{ routes.root_url }}">
        {% if section.settings.logo != blank %}
          <img
            src="{{ section.settings.logo | image_url: width: 300 }}"
            alt="{{ shop.name }}"
            :class="(forceSolid || (solidOnDesktop && isDesktop) || (solidOnMobile && !isDesktop) || isScrolled) ? 'invert-0' : 'invert-100'"
